{
    "name": "bauerdot/filament-mailbox",
    "description": "Filament plugin to view outgoing mail",
    "keywords": [
        "Bauerdot Network",
        "laravel",
        "maillog",
        "filament-mailbox"
    ],
    "homepage": "https://github.com/bauerdot/filament-mailbox",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Williamson",
            "email": "steve@bauerdotnetwork.com",
            "role": "Developer"
        }
    ],
    "suggest": {
        "filament/filament": "^3.0-stable - Adds Filament admin panel integration"
    },
    "require": {
        "php": "^8.2",
        "aws/aws-php-sns-message-validator": "^1.10",
        "filament/filament": "^4.0",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^2.9||^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||^8.22.0",
        "pestphp/pest": "^3.0||^2.34",
        "pestphp/pest-plugin-arch": "^3.0||^2.7",
        "pestphp/pest-plugin-laravel": "^3.0||^2.3",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Bauerdot\\FilamentMailBox\\": "src/",
            "Bauerdot\\FilamentMailBox\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bauerdot\\FilamentMailBox\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bauerdot\\FilamentMailBox\\FilamentMailBoxServiceProvider"
            ],
            "aliases": {
                "FilamentMailBox": "Bauerdot\\FilamentMailBox\\Facades\\FilamentMailBox"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
